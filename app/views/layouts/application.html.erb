<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all',
                          'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application',
                             'data-turbolinks-track': 'reload' %>
</head>

<body>
<header class="main">
  <h1><%= @page_title %></h1>
</header>
<section class="content">
  <nav class="side_nav">

    <div id="cart" class="carts">

      <%= render_if @cart && @cart.line_items.any?, @cart %>
    </div>

    <ul>
      <li><a href="/" data-title="Home"></a></li>
      <li><a href="/questions" data-title="Questions"></a></li>
      <li><a href="/news" data-title="News"></a></li>
      <li><a href="/contact" data-title="Contact"></a></li>
    </ul>
  </nav>
  <main class='<%= controller.controller_name %>'>
    <%= yield %>
  </main>
</section>
</body>
</html>
