
<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Products List</h1>
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <%= image_tag(product.image.small) %>
          <h2><%= product.name %></h2>
          <h3><%= product.category %></h3>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <b>Price: </b><%= number_to_currency(product.price, :unit => "â‚¬") %>
          </div>
          <div class="quantity">
            <b>In stock: </b><%= product.quantity %>
          </div>
          <div>
            <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
            <br>
          </div>

        </li>
        <% end %>
    <% end %>
    <% end %>
</ul>
