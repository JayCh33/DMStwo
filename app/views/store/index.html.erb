          <td><%= product.quantity %></td>
          <td><%= number_to_currency(product.price, :unit => "â‚¬") %></td>
          <td><%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %></td>
                </tr>

              <% end %>
            <% end %>
          <% end %>


