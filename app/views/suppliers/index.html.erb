<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>City</th>
      <th>Address</th>
      <th>Postal code</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Company</th>
      <th>Company details</th>
      <th>Bank details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.country %></td>
        <td><%= supplier.city %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.postal_code %></td>
        <td><%= supplier.email %></td>
        <td><%= supplier.phone %></td>
        <td><%= supplier.company %></td>
        <td><%= supplier.company_details %></td>
        <td><%= supplier.bank_details %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

