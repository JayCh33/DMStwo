<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Vehicle make</th>
      <th>Vehicle category</th>
      <th>Vehicle model</th>
      <th>Vehicle condition</th>
      <th>Vehicle registration date</th>
      <th>Vehicle engine</th>
      <th>Vehicle power</th>
      <th>Vehicle drive type</th>
      <th>Vehicle fuel type</th>
      <th>Vehicle doors</th>
      <th>Vehicle color</th>
      <th>Vehicle interior type</th>
      <th>Vehicle airbags</th>
      <th>Vehicle euroclass</th>
      <th>Vehicle price</th>
      <th>Vehicle life cycle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.vehicle_make %></td>
        <td><%= vehicle.vehicle_category %></td>
        <td><%= vehicle.vehicle_model %></td>
        <td><%= vehicle.vehicle_condition %></td>
        <td><%= vehicle.vehicle_registration_date %></td>
        <td><%= vehicle.vehicle_engine %></td>
        <td><%= vehicle.vehicle_power %></td>
        <td><%= vehicle.vehicle_drive_type %></td>
        <td><%= vehicle.vehicle_fuel_type %></td>
        <td><%= vehicle.vehicle_doors %></td>
        <td><%= vehicle.vehicle_color %></td>
        <td><%= vehicle.vehicle_interior_type %></td>
        <td><%= vehicle.vehicle_airbags %></td>
        <td><%= vehicle.vehicle_euroclass %></td>
        <td><%= vehicle.vehicle_price %></td>
        <td><%= vehicle.vehicle_life_cycle %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

